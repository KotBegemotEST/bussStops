extends layout
block content
  .userData
    p.loc User location: 
    p.user-reg    
    p.closes-stops  Nearest stops: 
    p.time  Time:  
  .wrapper.prety.border.rounded
    .form-row.col-lg-6#regchs
      label.col-lg-3 	Chose region:
      .col-lg-7#regionsFocus
        input( type="text" class="form-control" id="regions_input" name="regions" autocomplete="off" list="")
        datalist#regions_list
      .col-lg-2
        input( id = "sendRegions" class="btn btn-block btn-outline-secondary" type='submit' value='send') 
    .form-row.col-lg-6 	
      label.col-lg-3 	Chose stops:
      .col-lg-7#stopsFocus
        input( type="text" class="form-control" id="stops_input" name="stops" autocomplete="off" list="")
        datalist#stops_list
      .col-lg-2
        input( id = "showStops" class="btn btn-block btn-outline-secondary" type='submit' value='show') 
  .buses
  .top5
    table.table.table-hover
      thead
        tr
          th(scope='col') #
          th(scope='col') Bus
          th(scope='col') Time
          th(scope='col') Stop Name
          th(scope='col') Direction
      tbody
  button.clear.btn.btn-outline-danger Clear data
